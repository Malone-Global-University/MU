/*Complete Javascript Wiring for fetching external navbar*/


<!-- 1.place this where you want navbar in the body tag of html document -->


<div id="navbar"></div>


<!-- 2.place this javascript code inside /scripts/main.js -->


fetch('/assets/navbar.html')
  .then(r => r.text())
  .then(html => document.getElementById('navbar').innerHTML = html);


<!-- 3.place this javascript code in the header or at the bottom of page just before closing body tag -->


<script src="/assets/navbar.js" defer></script>


<!-- #1 connects the page to your navbar.html file located at /components/navbar.html
     #2 is the main.js located at /scripts/main.js
     #3 is the link to main.js we put just before </body>-->
