<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 700" preserveAspectRatio="xMidYMid meet">
  <title id="title">Mathematical Operations Reference Table</title>
  <desc id="desc">Table showing operation, symbol, and example equations (forward and inverse) with color-coded terms.</desc>

  <style>
    .bg { fill: #ffffff; }
    .header { fill: #2b6cb0; }
    .header-text { fill: #ffffff; font-family: Arial, Helvetica, sans-serif; font-size:18px; font-weight:700; }
    .cell-text { fill: #111827; font-family: Arial, Helvetica, sans-serif; font-size:14px; }
    .small { font-size:12px; fill:#0f172a; }
    .grid { fill: none; stroke: #cbd5e1; stroke-width:1; }
    .row-alt { fill: #f8fafc; }
    .row-even { fill: #ffffff; }
    .op { font-weight:700; font-size:15px; }

    /* Color coding */
    .term1  { fill:#1d4ed8; font-weight:600; }   /* blue */
    .term2  { fill:#dc2626; font-weight:600; }   /* red */
    .result { fill:#059669; font-weight:600; }  /* green */
    .sign   { fill:#af00af; font-weight:600; }  /* purple */

  </style>

  <!-- Background -->
  <rect class="bg" x="0" y="0" width="980" height="700" rx="8"/>

  <!-- Header -->
  <g transform="translate(10,16)">
    <rect class="header" x="0" y="0" width="980" height="48" rx="6"/>
    <text class="header-text" x="20" y="30">Operation</text>
    <text class="header-text" x="210" y="30">Symbol(s) / Notation</text>
    <text class="header-text" x="430" y="30">English</text>
    <text class="header-text" x="710" y="30">Reciprocal/Inverse</text>
  </g>

  <!-- Row 1: Addition -->
  <g transform="translate(10,74)">
    <rect class="row-alt" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="36">Addition</text>
    <text class="cell-text small" x="210" y="36"><tspan class="sign">plus sign +</tspan></text>

    <text class="cell-text" x="430" y="36">
      <tspan class="term1">Augend</tspan><tspan class="sign"> + </tspan><tspan class="term2">Addend</tspan><tspan class="sign"> = </tspan><tspan class="result">total</tspan></text>

    <text class="cell-text" x="710" y="36">
      <tspan class="result">total</tspan><tspan class="sign"> − </tspan><tspan class="term2">sum</tspan><tspan class="sign"> = </tspan><tspan class="term1">Sum</tspan>
    </text>
  </g>

  <!-- Row 2: Subtraction -->
  <g transform="translate(10,154)">
    <rect class="row-even" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="36">Subtraction</text>
    <text class="cell-text small" x="210" y="36"><tspan class="sign">minus sign − </tspan></text>
    <text class="cell-text" x="430" y="36">
      <tspan class="term1">Minuend</tspan><tspan class="sign"> − </tspan><tspan class="term2">subtrahend</tspan><tspan class="sign"> = </tspan><tspan class="result">difference</tspan>
    </text>
    <text class="cell-text" x="710" y="36">
      <tspan class="result">difference</tspan><tspan class="sign"> + </tspan><tspan class="term2">subtrahend</tspan><tspan class="sign"> = </tspan><tspan class="term1">Minuend</tspan>
    </text>
  </g>

  <!-- Row 3: Multiplication -->
  <g transform="translate(10,234)">
    <rect class="row-alt" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="36">Multiplication</text>
    <text class="cell-text small" x="210" y="36"><tspan class="sign">dot &#183;</tspan></text>

    <text class="cell-text" x="430" y="36">
      <tspan class="term1">Factor</tspan><tspan class="sign"> &#183; </tspan><tspan class="term2">factor</tspan> = <tspan class="result">product</tspan>
    </text>
    <text class="cell-text" x="710" y="36">
      <tspan class="result">product</tspan> ÷ <tspan class="term2">factor</tspan> = <tspan class="term1">Factor</tspan>
    </text>
  </g>

  <!-- Row 4: Division -->
  <g transform="translate(10,314)">
    <rect class="row-even" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="36">Division</text>
    <text class="cell-text small" x="210" y="26"><tspan class="sign">obelus ÷</tspan></text>

        <text class="cell-text small" x="210" y="50"><tspan class="sign">slash /</tspan></text>


    <text class="cell-text" x="430" y="26">
      <tspan class="term1">Dividend</tspan><tspan class="sign"> ÷ </tspan><tspan class="term2">divisor</tspan><tspan class="sign"> = </tspan><tspan class="result">quotient</tspan>
    </text>
    <text class="cell-text" x="430" y="50">
      <tspan class="term1">Dividend</tspan><tspan class="sign"> / </tspan><tspan class="term2">divisor</tspan><tspan class="sign">  = </tspan><tspan class="result">quotient</tspan>
    </text>
    <text class="cell-text" x="710" y="36">
      <tspan class="result" >quotient</tspan><tspan class="sign"> ∙ </tspan><tspan class="term2">divisor</tspan> = <tspan class="term1">dividend</tspan>
    </text>
  </g>

  <!-- Row 5: Exponentiation -->
  <g transform="translate(10,394)">
    <rect class="row-alt" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="36">Exponentiation</text>
    <text class="cell-text small" x="210" y="26"><tspan class="sign">caret ^ </tspan></text>
    <text class="cell-text small" x="210" y="50"><tspan class="sign">superscript ⁽ ˣ ⁾</tspan></text>

    <text class="cell-text" x="430" y="26">
      <tspan class="term1">base</tspan><tspan class="sign"> ^</tspan><tspan class="term2">exponent</tspan><tspan class="sign">  = </tspan><tspan class="result">power</tspan>
    </text>
    <text class="cell-text" x="430" y="50">
      <tspan class="term1">base</tspan><tspan class="term2" y="45">(exponent)</tspan><tspan class="sign"> = </tspan><tspan class="result" y="50">power</tspan>
    </text>
    <text class="cell-text" x="710" y="28">
      <tspan class="term2">exponent</tspan><tspan class="sign" y="36">&#x221A;</tspan><tspan class="result">product</tspan><tspan class="sign"> = </tspan><tspan class="term1">base</tspan>
    </text>
  </g>

  <!-- Row 6: Radicalization -->
  <g transform="translate(10,474)">
    <rect class="row-even" x="0" y="0" width="980" height="64" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="64" rx="4"/>
    <text class="cell-text op" x="20" y="30">Radicalization</text>
    <text class="cell-text small" x="210" y="30"><tspan class="sign">radical sign &#x221A;</tspan></text>
    
    <text class="cell-text" x="430" y="25">
      <tspan class="term2">index</tspan><tspan class="sign" y="30">&#8730;</tspan><tspan class="term1">radicand</tspan> <tspan class="sign">= </tspan><tspan class="result">root</tspan>
    </text>
    <text class="cell-text" x="710" y="30">
      <tspan class="term1">root</tspan><tspan class="term2" x="738" y="25">(exponent)</tspan><tspan class="sign" y="30"> = </tspan><tspan class="result" >product</tspan>
    </text>

    
  </g>
</svg>
