<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" width="1000" height="520" viewBox="0 0 1000 520" role="img" aria-labelledby="title desc">
  <title id="title">Mathematical Operations Reference Table</title>
  <desc id="desc">Table showing operation, symbol, and example equations (forward and inverse) for addition, subtraction, multiplication, division, exponentiation, and radicalization.</desc>

  <style>
    .bg { fill: #ffffff; }
    .header { fill: #2b6cb0; }
    .header-text { fill: #ffffff; font-family: Arial, Helvetica, sans-serif; font-size:18px; font-weight:700; }
    .cell-text { fill: #111827; font-family: Arial, Helvetica, sans-serif; font-size:14px; }
    .small { font-size:12px; fill:#0f172a; }
    .grid { fill: none; stroke: #cbd5e1; stroke-width:1; }
    .row-alt { fill: #f8fafc; }
    .row-even { fill: #ffffff; }
    .op { font-weight:700; font-size:15px; }
  </style>

  <!-- Background -->
  <rect class="bg" x="0" y="0" width="1000" height="520" rx="8"/>

  <!-- Table layout -->
  <!-- Columns: 240, 200, 280, 260  => total 980 + margins -->
  <!-- Header -->
  <g transform="translate(10,16)">
    <rect class="header" x="0" y="0" width="980" height="48" rx="6"/>
    <text class="header-text" x="20" y="32">Operation</text>
    <text class="header-text" x="260" y="32">Symbol(s) / Notation</text>
    <text class="header-text" x="480" y="32">Example — forward</text>
    <text class="header-text" x="760" y="32">Example — inverse / related</text>
  </g>

  <!-- Rows -->
  <!-- Row y positions start at 74 with height 68 each -->
  <!-- Row 1: Addition -->
  <g transform="translate(10,74)">
    <rect class="row-alt" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="26">Addition</text>
    <text class="cell-text small" x="260" y="20">+ — plus sign</text>
    <text class="cell-text" x="480" y="20">Sum + sum = total</text>
    <text class="cell-text" x="760" y="20">total − sum = Sum</text>

    <text class="cell-text small" x="260" y="42">alternate: a + b</text>
    <text class="cell-text small" x="480" y="42">(example repeats if desired)</text>
  </g>

  <!-- Row 2: Subtraction -->
  <g transform="translate(10,154)">
    <rect class="row-even" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="26">Subtraction</text>
    <text class="cell-text small" x="260" y="20">− — minus sign</text>
    <text class="cell-text" x="480" y="18">Minuend − subtrahend = difference</text>
    <text class="cell-text" x="760" y="18">difference + subtrahend = Minuend</text>

    <text class="cell-text small" x="480" y="40">(inverse: add subtrahend)</text>
  </g>

  <!-- Row 3: Multiplication -->
  <g transform="translate(10,234)">
    <rect class="row-alt" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="26">Multiplication</text>
    <text class="cell-text small" x="260" y="20">∙ — dot</text>
    <text class="cell-text" x="480" y="18">Factor ∙ factor = product</text>
    <text class="cell-text" x="760" y="18">product ÷ factor = Factor</text>

    <text class="cell-text small" x="480" y="40">(also × or juxtaposition: ab)</text>
  </g>

  <!-- Row 4: Division -->
  <g transform="translate(10,314)">
    <rect class="row-even" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="26">Division</text>
    <text class="cell-text small" x="260" y="20">÷ — obelus  /  / — slash</text>
    <text class="cell-text" x="480" y="14">Dividend ÷ divisor = quotient</text>
    <text class="cell-text" x="760" y="14">Dividend / divisor = quotient</text>

    <text class="cell-text" x="480" y="36">quotient ∙ divisor = dividend</text>
    <text class="cell-text small" x="260" y="40">other forms: fraction bar</text>
  </g>

  <!-- Row 5: Exponentiation -->
  <g transform="translate(10,394)">
    <rect class="row-alt" x="0" y="0" width="980" height="68" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="68" rx="4"/>
    <text class="cell-text op" x="20" y="26">Exponentiation</text>
    <text class="cell-text small" x="260" y="12">^ — caret  ·  x (as superscript)</text>
    <text class="cell-text" x="480" y="14">root^exponent = power</text>
    <text class="cell-text" x="760" y="14">rootexponent = power</text>

    <text class="cell-text small" x="480" y="36">exponent√product = root</text>
  </g>

  <!-- Row 6: Radicalization -->
  <g transform="translate(10,474)">
    <rect class="row-even" x="0" y="0" width="980" height="48" rx="4"/>
    <rect class="grid" x="0" y="0" width="980" height="48" rx="4"/>
    <text class="cell-text op" x="20" y="30">Radicalization</text>
    <text class="cell-text small" x="260" y="30">√ — radical sign</text>
    <text class="cell-text" x="480" y="30">exponent√radicand = root</text>
    <text class="cell-text" x="760" y="30">rootexponent = product</text>
  </g>

  <!-- Outer border -->
  <rect x="10" y="16" width="980" height="506" fill="none" stroke="#0f172a" stroke-opacity="0.06" rx="8"/>
</svg>
